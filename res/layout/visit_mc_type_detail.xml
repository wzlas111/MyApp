<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top"
        style="@style/RelativeLayoutTop" >

        <Button
            android:id="@+id/btBack"
            style="@style/ButtonBack" />

        <TextView
            android:id="@+id/tvTitleCust"
            style="@style/TextViewTopTitle"
            android:text="客户类型与性质" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.0dp"
            android:gravity="center_vertical"
            android:text="保存"
            android:textColor="#f6f7f8"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tt_page_item_bk"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/row_product_type"
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:background="@drawable/selector_select_bg"
            android:orientation="horizontal" >

            <TextView
                style="@style/table_text_style"
                android:text="产品类型" />

            <TextView
                android:id="@+id/product_type"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="3dip"
                android:text=""
                android:textColor="@color/default_value_color"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_line_color" />

        <LinearLayout
            android:id="@+id/row_order_type"
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:background="@drawable/selector_select_bg"
            android:orientation="horizontal" >

            <TextView
                style="@style/table_text_style"
                android:text="订单类型" />

            <TextView
                android:id="@+id/order_type"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="3dip"
                android:text=""
                android:textColor="@color/default_value_color"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_line_color" />

        <LinearLayout
            android:id="@+id/row_company_nature"
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:background="@drawable/selector_select_bg"
            android:orientation="horizontal" >

            <TextView
                style="@style/table_text_style"
                android:text="单位性质" />

            <TextView
                android:id="@+id/company_nature"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="3dip"
                android:text=""
                android:textColor="@color/default_value_color"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/table_text_style"
                android:text="工厂人数" />

            <TextView
                android:id="@+id/factory_persons"
                style="@style/table_edit_style" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>