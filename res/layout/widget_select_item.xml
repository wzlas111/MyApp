<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/selector_select_bg" >
        
        <TextView
	        android:id="@+id/name"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:paddingLeft="15.0dp"
	        android:textSize="15.0sp"
	        android:text="test" />

    	<ImageView
	        android:id="@+id/checked"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="20.0dp"
	        android:scaleType="fitCenter"
	        android:src="@drawable/tt_album_img_selected"
	        android:visibility="invisible" />
    	
    </LinearLayout>
    <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />

</LinearLayout>
