<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_fragment_bk_color" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/tt_page_item_bk"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:shrinkColumns="1" >
                <TableRow>
                    <TextView
                        style="@style/table_text_style"
                        android:text="客户名称" />
                    <EditText
                        android:id="@+id/client_name"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:padding="3dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                </TableRow>
 				<View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow>
                    <TextView
                        android:text="客户编码"
                        style="@style/table_text_style"/>
                    <EditText
                        android:id="@+id/client_code"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:padding="3dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                </TableRow>
 				<View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow
                    android:id="@+id/row_dealer_name"
                    android:background="@drawable/selector_select_bg">
                    <TextView
                        style="@style/table_text_style"
                        android:text="所属经销商" />
                    <TextView
                        android:id="@+id/dealer_name"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginRight="25.0dp"
                        android:src="@drawable/tt_default_arrow"/>
                </TableRow>
 				<View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow
                    android:id="@+id/row_type"
                    android:background="@drawable/selector_select_bg">
                    <TextView
                        style="@style/table_text_style"
                        android:text="共享属性" />
                    <TextView
                        android:id="@+id/type"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginRight="25.0dp"
                        android:src="@drawable/tt_default_arrow"/>
                </TableRow>
 				<View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow
                    android:id="@+id/row_region_name"
                    android:background="@drawable/selector_select_bg">
                    <TextView
                        style="@style/table_text_style"
                        android:text="客户区域" />
                    <TextView
                        android:id="@+id/region_name"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginRight="25.0dp"
                        android:src="@drawable/tt_default_arrow"/>
                </TableRow>
				<View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow
                    android:id="@+id/row_typename"
                    android:background="@drawable/selector_select_bg">
                    <TextView
                        style="@style/table_text_style"
                        android:text="客户类型" />
                    <TextView
                        android:id="@+id/typename"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginRight="25.0dp"
                        android:src="@drawable/tt_default_arrow"/>
                </TableRow>
                <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow>
                    <TextView
                        style="@style/table_text_style"
                        android:text="电话"/>
                    <EditText
                        android:id="@+id/contact_phone"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                </TableRow>
 				<View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow>
                    <TextView
                        style="@style/table_text_style"
                        android:text="传真" />
                    <EditText
                        android:id="@+id/fax"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                </TableRow>
                <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow>
                    <TextView
                        style="@style/table_text_style"
                        android:text="地址" />
                    <EditText
                        android:id="@+id/address"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                </TableRow>
                <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
                <TableRow>
                    <TextView
                        style="@style/table_text_style"
                        android:text="备注" />
                    <EditText
                        android:id="@+id/remark"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/default_value_color"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/chat_btn"
                android:layout_width="fill_parent"
                android:layout_height="53dp"
                android:layout_margin="20dp"
                android:background="@drawable/tt_default_btn_bk"
                android:text="获取位置"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/circle_progressbar"
        android:indeterminateDuration="4000"
        android:visibility="gone" />

</LinearLayout>