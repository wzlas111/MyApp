<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedee0" >

    <RelativeLayout
        android:id="@+id/layout_top"
        style="@style/RelativeLayoutTop"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/btBack"
            style="@style/ButtonBack" />

        <TextView
            android:id="@+id/tvTitleCust"
            style="@style/TextViewTopTitle"
            android:text="@string/dealer_title" />
        
        <ProgressBar
	        android:id="@+id/circle_progress_bar"
	        android:layout_width="20.0dp"
	        android:layout_height="20.0dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="30.0dp"
	        android:indeterminateDrawable="@drawable/circle_progressbar"
	        android:indeterminateDuration="4000"
	        android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/layout_top"
        android:background="@drawable/person_round_bg"
        android:focusable="true"
        android:paddingLeft="5.0dp"
        android:paddingRight="5.0dp"
        android:focusableInTouchMode="true" >

        <EditText
            android:id="@+id/search_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:background="@drawable/person_round_content"
            android:hint="搜索"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:textSize="15sp" />

        <ImageButton
            android:layout_width="30.0dp"
            android:layout_height="30.0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/person_icon_search"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_container"
        android:background="#ffffff" >

        <com.eastelsoft.lbs.widget.DealerListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:listSelector="@android:color/transparent" />
    </FrameLayout>
    
</RelativeLayout>