<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10.0dp"
    android:background="@drawable/tt_page_item_bk"
    android:gravity="center_vertical"
    android:paddingLeft="20dp"
    android:shrinkColumns="1" >

    <TableRow>
        <TextView
            android:layout_height="45dp"
            android:layout_column="1"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text="姓名"
            android:textColor="@color/default_key_color"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/name"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text=""
            android:textColor="@color/default_value_color"
            android:textSize="15sp" />
    </TableRow>
    <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
    <TableRow>
        <TextView
            android:layout_height="45dp"
            android:layout_column="1"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text="职位 "
            android:textColor="@color/default_key_color"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/position"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text=""
            android:textColor="@color/default_value_color"
            android:textSize="15sp" />
    </TableRow>
    <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
    <TableRow>
        <TextView
            android:layout_height="45dp"
            android:layout_column="1"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text="电话"
            android:textColor="@color/default_key_color"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tel_1"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text=""
            android:textColor="@color/default_value_color"
            android:textSize="15sp" />
    </TableRow>
    <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
    <TableRow>
        <TextView
            android:layout_height="45dp"
            android:layout_column="1"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text="电话"
            android:textColor="@color/default_key_color"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tel_2"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text=""
            android:textColor="@color/default_value_color"
            android:textSize="15sp" />
    </TableRow>
    <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
    <TableRow>
        <TextView
            android:layout_height="45dp"
            android:layout_column="1"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text="电话"
            android:textColor="@color/default_key_color"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tel_3"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text=""
            android:textColor="@color/default_value_color"
            android:textSize="15sp" />
    </TableRow>
    <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/default_line_color" />
    
    <TableRow>
        <TextView
            android:layout_height="45dp"
            android:layout_column="1"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text="备注"
            android:textColor="@color/default_key_color"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/remark"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:padding="3dip"
            android:text=""
            android:textColor="@color/default_value_color"
            android:textSize="15sp" />
    </TableRow>

</TableLayout>