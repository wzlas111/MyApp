<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clear_parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_bg">

    <RelativeLayout
        android:id="@+id/clear_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/topbg" >

        <Button
            android:id="@+id/clear_btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_go_back_true"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_activity_clearfile"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
        android:id="@+id/clearFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="@string/clear_file"
        android:textColor="@android:color/white"
        android:background="@drawable/selector_button_title_true"
        />
    </RelativeLayout>

    <TextView
        android:id="@+id/clear_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear_layout_top"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:text="@string/title_clearhistory"
        android:textColor="@color/app_text_def"
        android:textStyle="bold|normal"
        android:textSize="18.0sp" />

    <LinearLayout
        android:layout_width="300dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/clear_title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
<RadioGroup android:id="@+id/clear_radioGroup" 
    android:contentDescription="@string/title_clearhistory" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />
        <RadioButton
            android:id="@+id/clear_radioButton1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/clearhistory_1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />
        <RadioButton
            android:id="@+id/clear_RadioButton02"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/clearhistory_2" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />
        <RadioButton
            android:id="@+id/clear_RadioButton03"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/clearhistory_3" />
        
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />
     </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/clear_c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />

