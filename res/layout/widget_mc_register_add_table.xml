<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10.0dp"
    android:background="@drawable/tt_page_item_bk"
    android:gravity="center_vertical"
    android:paddingLeft="20dp"
    android:shrinkColumns="1" >

    <TableRow
        android:layout_marginTop="1.0dp"
        android:id="@+id/row_model"
        android:background="@drawable/selector_select_bg">

        <TextView
            style="@style/table_text_style"
            android:text="机器型号" />

        <TextView
            android:id="@+id/mc_model_id"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        
        <TextView
            android:id="@+id/mc_model"
            style="@style/table_edit_style" />

        <ImageView
            android:id="@+id/mc_model_select"
            android:layout_width="60.0dp"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:src="@drawable/tt_default_arrow" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_line_color" />

    <TableRow>

        <TextView
            style="@style/table_text_style"
            android:text="机器编码 " />

        <EditText
            android:id="@+id/mc_code"
            style="@style/table_edit_style"
            android:imeOptions="actionNext" />
        
        <ImageView
            android:id="@+id/mc_code_select"
            android:layout_width="60.0dp"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:src="@drawable/tt_default_arrow" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_line_color" />

    <TableRow>

        <TextView
            style="@style/table_text_style"
            android:text="故障原因" />

        <EditText
            android:id="@+id/mc_reason"
            style="@style/table_edit_style"
            android:imeOptions="actionNext" />
        
        <ImageView
            android:id="@+id/mc_reason_select"
            android:layout_width="60.0dp"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:src="@drawable/tt_default_arrow" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/default_line_color" />

    <TableRow>

        <TextView
            style="@style/table_text_style"
            android:text="解决方法" />

        <EditText
            android:id="@+id/mc_solver"
            style="@style/table_edit_style"
            android:imeOptions="actionNext" />
        
        <ImageView
            android:id="@+id/mc_solver_select"
            android:layout_width="60.0dp"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:src="@drawable/tt_default_arrow" />
    </TableRow>

</TableLayout>