<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/sectionTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dip"
        android:paddingBottom="3.0dp"
        android:paddingTop="3.0dp"
        android:background="#f7f7f7"
        android:paddingLeft="10dip"
        android:gravity="center_vertical"
        android:text="A"
        android:textColor="#858585"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10.0dp"
        android:paddingBottom="10.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/selector_listview_item_bg" >

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tt_default_user_portrait_corner" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="测试人员"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telephpne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="13675853590"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:layout_marginLeft="10.0dp"
	    android:background="#cccccc" />

</LinearLayout>
